<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <data>


        <variable
                name="bean"
                type="com.mredrock.cyxbs.freshman.data.bean.ProcessBean.TextBean"/>
    </data>

    <LinearLayout
            android:id="@+id/ll_process_on_click"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="1000dp"
                    app:layout_goneMarginStart="1000dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>


            <LinearLayout
                    android:background="#AEC0FF"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="21dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0">


            </LinearLayout>


            <LinearLayout
                    android:background="#AEC0FF"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="21dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="26dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="100dp"
                    app:layout_constraintHorizontal_bias="0.097"
                    android:id="@+id/freshman_linearlayout3"
                    android:orientation="horizontal">


            </LinearLayout>


            <ImageView
                    android:src="@mipmap/ic_pro_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="15.5dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"
                    android:id="@+id/freshman_imageview"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/freshman_shape_pro_backgroup"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/freshman_imageview"
                    android:id="@+id/freshman_constraintlayout3">


                <ImageView
                        android:src="@mipmap/ic_pro_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="3dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="1.0"/>


                <ImageView
                        android:src="@mipmap/ic_pro_right_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="0.0"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingStart="13dp"
                        android:paddingEnd="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0"
                        android:id="@+id/freshman_constraintlayout2">


                    <TextView
                            android:id="@+id/tv_process_tiltle"
                            android:text="@{bean.title}"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="start|center_vertical"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintVertical_bias="0.2"/>

                    <ImageView
                            android:id="@+id/iv_arrow_indicator"
                            android:src="@drawable/freshman_more_function_arrow_bottom"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_width="13dp"
                            android:adjustViewBounds="true"
                            android:layout_height="13dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_process_tiltle"
                            app:layout_constraintTop_toTopOf="@+id/tv_process_tiltle"
                            app:layout_constraintStart_toEndOf="@+id/tv_process_tiltle"
                            app:layout_constraintHorizontal_bias="1.0"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                        android:id="@+id/ll_process"
                        android:orientation="vertical"
                        android:layout_marginStart="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/freshman_constraintlayout2"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0">


                    <TextView
                            android:text="@{bean.detail}"
                            android:textColor="#666666"
                            android:layout_marginEnd="40dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            imageUrl="@{bean.photo}"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="40dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/common_place_holder"
                            android:id="@+id/freshman_imageview2"
                            android:layout_marginTop="12dp"/>


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>