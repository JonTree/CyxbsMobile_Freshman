<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="activity"
                type="com.mredrock.cyxbs.freshman.ui.acivity.MoreFunctionActivity"/>
        <variable
                name="view"
                type="android.view.View"/>
    </data>

    <FrameLayout
            android:animateLayoutChanges="true"
            android:id="@+id/fl_more_function"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.acivity.MoreFunctionActivity">

            <include layout="@layout/common_toolbar"/>


            <LinearLayout
                    android:paddingTop="15dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@mipmap/freshman_more_function"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->activity.onClick(0)}">


                    <TextView
                            android:text="重邮2019迎新专题"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintVertical_bias="0.0"
                            android:id="@+id/freshman_textview11"/>

                    <TextView
                            android:text="邮你造未来"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/freshman_textview12"
                            android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@+id/freshman_textview11"
                            app:layout_constraintStart_toStartOf="@+id/freshman_textview11"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="13sp"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginBottom="15dp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            app:srcCompat="@mipmap/freshman_more_function_arrow_right"
                            android:id="@+id/freshman_imageview13"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/freshman_textview11"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintHorizontal_bias="1.0"/>

                </androidx.constraintlayout.widget.ConstraintLayout>




                <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@mipmap/freshman_more_function"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->activity.onClick(1)}">


                    <TextView
                            android:text="掌上重邮新功能"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintVertical_bias="0.0"
                            android:id="@+id/freshman_textview21"/>

                    <TextView
                            android:text="校车，校历等更多查询功能"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/freshman_textview22"
                            android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@+id/freshman_textview21"
                            app:layout_constraintStart_toStartOf="@+id/freshman_textview21"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="13sp"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginBottom="15dp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            app:srcCompat="@mipmap/freshman_more_function_arrow_right"
                            android:id="@+id/freshman_imageview23"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/freshman_textview21"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintHorizontal_bias="1.0"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@mipmap/freshman_more_function"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->activity.onClick(2)}">


                    <TextView
                            android:text="重邮小帮手"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintVertical_bias="0.0"
                            android:id="@+id/freshman_textview31"/>

                    <TextView
                            android:text="学长学姐帮帮忙"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/freshman_textview32"
                            android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@+id/freshman_textview31"
                            app:layout_constraintStart_toStartOf="@+id/freshman_textview31"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="13sp"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginBottom="15dp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            app:srcCompat="@mipmap/freshman_more_function_arrow_right"
                            android:id="@+id/freshman_imageview33"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/freshman_textview31"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintHorizontal_bias="1.0"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </LinearLayout>
        <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#20000000"
                android:onClick="@{()->activity.dismissDialog()}"
                android:visibility="@{activity.dialogOpen.get()?view.VISIBLE:view.GONE}">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@color/cardview_light_background">
                <ImageView
                        android:id="@+id/img_vx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:adjustViewBounds="true"
                        android:onClick="@{()->activity.nullClick()}"
                        android:src="@drawable/freshman_more_function_qr_code"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_marginBottom="40dp"
                        android:text="关注'重邮小帮手'微信公众号，参与学长学姐帮帮忙"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</layout>