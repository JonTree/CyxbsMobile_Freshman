<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="activity"
                type="com.mredrock.cyxbs.freshman.ui.HomepageActivity"/>

    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.HomepageActivity">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    />


            <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:background="@drawable/freshman_shape_linear_home"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:onClick="@{()->activity.onClick(1)}">

                <TextView
                        android:textColor="#ffffff"
                        android:text="入学必备"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:background="@drawable/freshman_shape_linear_home"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:onClick="@{()->activity.onClick(2)}">

                <TextView
                        android:textColor="#ffffff"
                        android:text="指路重邮"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:background="@drawable/freshman_shape_linear_home"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:onClick="@{()->activity.onClick(3)}">

                <TextView
                        android:textColor="#ffffff"
                        android:text="入学流程"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:background="@drawable/freshman_shape_linear_home"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:onClick="@{()->activity.onClick(4)}">

                <TextView
                        android:textColor="#ffffff"
                        android:text="校园指导"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:background="@drawable/freshman_shape_linear_home"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:onClick="@{()->activity.onClick(5)}">

                <TextView
                        android:textColor="#ffffff"
                        android:text="线上活动"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:background="@drawable/freshman_shape_linear_home"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:onClick="@{()->activity.onClick(6)}">

                <TextView
                        android:textColor="#ffffff"
                        android:text="更多功能"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:background="@drawable/freshman_shape_linear_home"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:onClick="@{()->activity.onClick(7)}">

                <TextView
                        android:textColor="#ffffff"
                        android:text="关于我们"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>