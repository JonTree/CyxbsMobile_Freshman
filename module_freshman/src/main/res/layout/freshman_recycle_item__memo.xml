<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/freshman_linear_ness_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <View
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <CheckBox
            android:id="@+id/check_box_item_tiltle"
            android:layout_marginBottom="18dp"
            android:layout_width="43dp"
            android:theme="@style/freshman_edit_MyCheckBox"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#00FFFFFF"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"/>


    <TextView
            android:id="@+id/tv_item_tiltle"
            android:text="身份证"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/check_box_item_tiltle"
            app:layout_constraintStart_toEndOf="@+id/check_box_item_tiltle"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/check_box_item_tiltle"
            app:layout_constraintHorizontal_bias="0.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>