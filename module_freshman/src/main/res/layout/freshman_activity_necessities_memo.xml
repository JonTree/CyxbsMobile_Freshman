<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.acivity.NecessitiesMemoActivity">

    <Toolbar
            android:id="@+id/necessity_toolbar"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:background="@drawable/common_toolbar_background"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_height="85dp">

        <TextView
                android:text="备忘录"
                android:textSize="20sp"
                android:fitsSystemWindows="true"
                android:id="@+id/necessity_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"/>

        <TextView
                android:id="@+id/tv_memo_save"
                android:fitsSystemWindows="true"
                android:textSize="16sp"
                android:text="保存"
                android:layout_marginEnd="20dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:text="取消"
                android:textSize="16sp"
                android:fitsSystemWindows="true"
                android:textColor="#ffffff"
                android:id="@+id/tv_memo_cancel"
                android:src="@drawable/common_ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </Toolbar>


    <TextView
            android:text="添加备忘物品"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <LinearLayout
            android:background="@drawable/freshman_shape_linear_memo"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="54dp">

        <EditText
                android:id="@+id/et_memo_edit"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="输入不多于十五个字"
                android:maxLength="15"
                android:textSize="15sp"
                android:textColorHint="#B6B6B6"
                android:background="#FFFFFf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>